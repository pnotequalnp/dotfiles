(include "./widgets/clock.yuck")
(include "./widgets/system.yuck")
(include "./widgets/workspaces.yuck")

(defwindow status-bar
  :monitor 0
  :geometry (geometry :x "0%" :y "0%" :width "100%" :height "24px" :anchor "top center")
  :stacking "fg"
  :exclusive true
  :focusable false
  (centerbox
    (box :space-evenly false :halign "start"
      (system))
    (box :space-evenly false :halign "center"
      (workspaces))
    (box :space-evenly false :halign "end"
      (clock))))
